@{
}
@model Movie

<h1>Movie Submission</h1>

<form method="post">
    Category:<br>
    <input type="hidden" asp-for="movieID" />
    <select asp-for="CategoryID">
        <option value=""></option>
        @foreach (Category c in ViewBag.categories)
            {
                <option value="@c.CategoryID">@c.CategoryName</option>
            }
    </select>
    <br><br>
    <label asp-for="Title">Title:</label><br>
    <input asp-for="Title" /><br><br>
    <label asp-for="Year">Year:</label><br>
    <input asp-for="Year" type="number" min="1888" /><br><br>
    <label asp-for="Director">Director:</label><br>
    <input asp-for="Director" /><br><br>
    <label asp-for="Rating">Rating:</label><br>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option><br><br>
    </select><br><br>
    <label asp-for="Edited">Edited:</label><br>
    <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select><br><br>
    <label asp-for="LentTo">Lent to:</label><br>
    <input asp-for="LentTo" /><br><br>
    <label asp-for="CopiedToPlex">Copied To Plex:</label><br>
    <select asp-for="CopiedToPlex">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select><br><br>
    <label asp-for="Notes">Notes:</label><br>
    <input asp-for="Notes" /><br><br>
    

    <button type="submit">Submit Movie</button>

    <div asp-validation-summary="All"></div>
</form>
